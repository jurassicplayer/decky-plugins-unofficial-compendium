<div class="col mb-4">
  <a href="{% if plugin.redirect %}{{ plugin.redirect }}{% else %}{{ plugin.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      <div class="row no-gutters">
        <div class="{% if plugin.img %}col-md-6{% else %}col-md-12{% endif %}">
          <div class="card-body">
            <h3 class="card-title">{{ plugin.title }}</h3>
            <p class="card-text">{{ plugin.description }}</p>
            <div class="row ml-1 mr-1 p-0">
              {% if plugin.github %}
                <div class="github-icon">
                  <div class="icon" data-toggle="tooltip" title="Code Repository">
                    <a href="{{ plugin.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
                  </div>
                  {% if plugin.github_stars %}
                    <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                      <i class="fa-solid fa-star"></i>
                      <span id="{{ plugin.github_stars }}-stars"></span>
                    </span>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>
